<%= simple_form_for(@shop) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :address2 %>
    <%= f.input :city %>
    <%= f.input :state %>
    <%= f.input :scf %>
    <%= f.input :zip %>
    <%= f.input :mailscore %>
    <%= f.input :sic1code %>
    <%= f.input :sic1 %>
    <%= f.input :sic2code %>
    <%= f.input :sic2 %>
    <%= f.input :sic3code %>
    <%= f.input :sic3 %>
    <%= f.input :sic4code %>
    <%= f.input :sic4 %>
    <%= f.input :latitude %>
    <%= f.input :longitude %>
    <%= f.input :foursquare_id %>
    <%= f.input :email %>
    <%= f.input :phone %>
    <%= f.association :user %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
