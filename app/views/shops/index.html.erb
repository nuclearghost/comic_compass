<%- model_class = Shop -%>
<div class="page-header">
  <h1><%=t '.title', :default => Shop %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:address) %></th>
      <th><%= model_class.human_attribute_name(:address2) %></th>
      <th><%= model_class.human_attribute_name(:city) %></th>
      <th><%= model_class.human_attribute_name(:state) %></th>
      <th><%= model_class.human_attribute_name(:scf) %></th>
      <th><%= model_class.human_attribute_name(:zip) %></th>
      <th><%= model_class.human_attribute_name(:mailscore) %></th>
      <th><%= model_class.human_attribute_name(:sic1code) %></th>
      <th><%= model_class.human_attribute_name(:sic1) %></th>
      <th><%= model_class.human_attribute_name(:sic2code) %></th>
      <th><%= model_class.human_attribute_name(:sic2) %></th>
      <th><%= model_class.human_attribute_name(:sic3code) %></th>
      <th><%= model_class.human_attribute_name(:sic3) %></th>
      <th><%= model_class.human_attribute_name(:sic4code) %></th>
      <th><%= model_class.human_attribute_name(:sic4) %></th>
      <th><%= model_class.human_attribute_name(:latitude) %></th>
      <th><%= model_class.human_attribute_name(:longitude) %></th>
      <th><%= model_class.human_attribute_name(:foursquare_id) %></th>
      <th><%= model_class.human_attribute_name(:email) %></th>
      <th><%= model_class.human_attribute_name(:phone) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @shops.each do |shop| %>
      <tr>
        <td><%= shop.id %></td>
        <td><%= shop.name %></td>
        <td><%= shop.address %></td>
        <td><%= shop.address2 %></td>
        <td><%= shop.city %></td>
        <td><%= shop.state %></td>
        <td><%= shop.scf %></td>
        <td><%= shop.zip %></td>
        <td><%= shop.mailscore %></td>
        <td><%= shop.sic1code %></td>
        <td><%= shop.sic1 %></td>
        <td><%= shop.sic2code %></td>
        <td><%= shop.sic2 %></td>
        <td><%= shop.sic3code %></td>
        <td><%= shop.sic3 %></td>
        <td><%= shop.sic4code %></td>
        <td><%= shop.sic4 %></td>
        <td><%= shop.latitude %></td>
        <td><%= shop.longitude %></td>
        <td><%= shop.foursquare_id %></td>
        <td><%= shop.email %></td>
        <td><%= shop.phone %></td>
        <td><%=l shop.created_at, format: :long %></td>
        <td>
          <%= link_to shop_path(shop), :class => 'btn btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
            <%= glyph 'info-sign' %>
            <%= glyph 'pencil' %>
          <%- end -%>
          <%= link_to shop_path(shop), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do %>
            <%= glyph 'remove' %>
          <%- end -%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_shop_path,
            :class => 'btn btn-primary' %>
